<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PPAPBTravelakuy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_2</item>
        <item name="colorPrimaryVariant">@color/blue_3</item>
        <item name="colorOnPrimary">@color/blue_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_2</item>
        <item name="colorSecondaryVariant">@color/blue_3</item>
        <item name="colorOnSecondary">@color/blue_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_2</item>
        <item name="android:textColorPrimary">@color/grey_3</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Base.Theme.PPAPBTravelakuy.WithActionBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_2</item>
        <item name="colorPrimaryVariant">@color/blue_3</item>
        <item name="colorOnPrimary">@color/blue_4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_2</item>
        <item name="colorSecondaryVariant">@color/blue_3</item>
        <item name="colorOnSecondary">@color/blue_4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_2</item>
        <item name="android:textColorPrimary">@color/grey_3</item>

        <item name="android:fontFamily">@font/poppins_bold</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">48dp</item>
    </style>

    <!--Custom Button 1-->
    <style name="customButton1" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_1</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Custom Button 2-->
    <style name="customButton2" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_2</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Custom Edit Text 1-->
    <style name="customEditText1" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edittext_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey_3</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    <!--Custom Edit Text 2-->
    <style name="customEditText2" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_edittext_2</item>
        <item name="android:textColor">@color/grey_1</item>
        <item name="hintTextColor">@color/grey_3</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <!--For Title-->
    <style name="customTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_4</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--For Sub-Title-->
    <style name="customTextViewLargeBold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    For Small Text-->
    <style name="customTextViewSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_4</item>
    </style>

    <!--    For Hyperlink Text-->
    <style name="customTextViewHyperlinkText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_2</item>
    </style>

    <style name="botnav_text">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>