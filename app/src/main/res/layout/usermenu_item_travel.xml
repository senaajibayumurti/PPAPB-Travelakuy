<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_travel_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:id="@+id/tv_station_one"
        android:text="Stasiun 1"
        android:textSize="24sp"

        app:layout_constraintTop_toTopOf="@id/iv_travel_icon"
        app:layout_constraintStart_toEndOf="@id/iv_travel_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:id="@+id/tv_station_two"
        android:text="Stasiun 2"
        android:textSize="24sp"

        app:layout_constraintBottom_toBottomOf="@id/iv_travel_icon"
        app:layout_constraintStart_toEndOf="@id/iv_travel_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/tv_price"
        android:text="Harga"
        android:textSize="24sp"

        app:layout_constraintTop_toTopOf="@id/iv_travel_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_travel_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
